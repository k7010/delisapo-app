
<%= render partial: "baggage", locals: { baggage: @baggage } %>

<%#% 配達実績の入力 %>
<% if @result == false %>
  <% if current_user.id == @baggage.user.id %>
  <%= form_with(model: [@baggage, @delivery], local: true) do |form| %>
    <%= form.radio_button :delivery_result, '配達済み' %>
    <%= form.label :delivery_result, "完了", value: '配達済み' %>
    <%= form.radio_button :delivery_result, '不在' %>
    <%= form.label :delivery_result, "不在", value: '不在' %>
    <%= form.submit "SEND" %>
    <% end %>
  <% end %><br>
  <%= link_to "削除", baggage_path(@baggage.id), method: :delete %>
<% else %>
  <p>配達済み</p>
<% end %>


<%#= Time.now.strftime("%H:%M") %>