
<%= @baggage.address.name %>
<%= @baggage.block %>
<%= @baggage.building %>
<%= @baggage.family_name %>
<%= @baggage.first_name %><br>


<%#% 配達実績の入力 %>
<% if @result == false %>


  <%= form_with(model: [@baggage, @delivery], local: true) do |form| %>
    <%= form.radio_button :delivery_result, '配達済み' %>
    <%= form.label :delivery_result, "完了", value: '配達済み' %>
    <%= form.radio_button :delivery_result, '不在' %>
    <%= form.label :delivery_result, "不在", value: '不在' %>
    <%= form.submit "SEND" %>
  <% end %>

  <% @deliveries.each do |time| %>
    <%= time.created_at.strftime("%H:%M") %>
  <% end %>
  
<% else %> 
  <p>配達済み</p>
<% end %>



