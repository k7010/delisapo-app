<div class="body">
  <div class="wrapper">
  <div class="sign-title">
    <h2>Sign up</h2>
  </div>

    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :staff_number, class: "sign-label-name" %><br />
        <%= f.text_field :staff_number, autocomplete: "staff_number", class: "sign-form-area" %>
      </div>

      <div class="field">
        <%= f.label :email, 'Email Address', class: "sign-label-name" %><br />
        <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", class: "sign-form-area" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "sign-label-name" %><br />
        <%= f.password_field :password, placeholder:"6文字以上の半角英数字", class: "sign-form-area" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "sign-label-name" %><br />
        <%= f.password_field :password_confirmation,  placeholder:"同じパスワードを入力して下さい", class: "sign-form-area" %>
      </div>

      <div class="send-field">
        <%= f.submit "Sign up", class: "sign-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
    </div>
